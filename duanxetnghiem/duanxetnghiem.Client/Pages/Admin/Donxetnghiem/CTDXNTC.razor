@page "/ChitietDXNTC/{id:int}"

<div class="container">
    <h1 style="color: red;">Đơn yêu cầu đã từ chối</h1>
</div>
<div class="row">
    <div class="col-6">
        <h2>Thông tin khách hàng</h2>
        <div class="info">
            <p><strong>Họ tên:</strong> @user.Hoten</p>
            <p><strong>Tuổi:</strong> @user.Tuoi</p>
            <p><strong>Số điện thoại:</strong> @user.SDT</p>
            <p><strong>Địa chỉ:</strong> @user.Diachi</p>
            <p><strong>Email:</strong> @user.Email</p>
            <p><strong>Giới tính:</strong> @gioitinh(@user.Gioitinh)</p>
        </div>
    </div>
    <div class="col-6">
        <h2>Thông tin đơn xét nghiệm</h2>
        <div class="info">
            <p><strong>Id đơn:</strong> @Output.Id</p>
            <p><strong>Gói xét nghiệm:</strong> @GoiXN.TenGoi</p>
            <p><strong>Ngày tạo đơn:</strong> @Output.ngaytaodon</p>
            <p><strong>Ghi chú:</strong> @Output.ghiChu</p>
            <p><strong>Ngày muốn lấy máu:</strong> @Output.Ngaydat</p>
            <p><strong>Giờ lấy máu:</strong> @Output.giolaymau</p>
           
        </div>
    </div>
</div>
<a href="/ListDXNTC"><button style="background-color:black" class="btn btn-primary"> Quay lại </button></a>
@code {
    private User user = new User();
    public DonXetNghiem Output { get; set; } = new();
    public List<TuChoi> allTC { get; set; } = new();
    public GoiXetNghiem GoiXN { get; set; } = new();

    [Parameter]
    public int id { get; set; }
    protected override async Task OnInitializedAsync()
    {
        Output = await DXNservice.getbyid(id);
        user = await Usertservice.getuserbyid(Output.UserId);

        allTC = await TCservice.getallAsync();
    }

    private String gioitinh(bool a)
    {
        if (a)
        {
            return "Nam";
        }
        else
        {
            return "Nữ";
        }
    }
    public String loadTC(int id)
    {
        foreach (var us in allTC)
        {
            if (us.Id == id)
            {
                return us.Lydo;
            }
        }
        return null;
    }
}